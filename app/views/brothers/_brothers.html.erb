<!-- Team -->
<div class="wrapper style5">
    <section id="team" class="container">
        <header class="major">
            <h2>Say Hello to Our Brothers</h2>
            <span class="byline">They're sexy as fuck</span>
        </header>
        <div class="row">
            <% @brothers.each do |bro| %>
                <div class="3u">
                    <%= link_to((bro), class: 'image') do %>
                        <%= image_tag(bro.image, class: 'bropic') %>
                    <% end %>
                    <h3> <%= bro.name %> </h3>
                    <%= bro.grad_year %>
                    <%= bro.pledge_class %>
                </div>
            <% end %>
        </div>
    </section>
</div>